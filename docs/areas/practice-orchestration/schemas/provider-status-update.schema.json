{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orca.example/schemas/provider-status-update.schema.json",
  "title": "Provider Status Update Event Data",
  "type": "object",
  "required": ["providerId", "status", "effectiveAt"],
  "properties": {
    "providerId": { "type": "string" },
    "status": { "type": "string", "enum": ["available", "busy", "on-break", "off-duty", "in-surgery"] },
    "effectiveAt": { "type": "string", "format": "date-time" },
    "locationId": { "type": "string" },
    "note": { "type": "string" }
  },
  "additionalProperties": false
}
