{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://orca.example/schemas/resource-occupancy.schema.json",
  "title": "Resource Occupancy Event Data",
  "type": "object",
  "required": ["resourceId", "status", "timestamp"],
  "properties": {
    "resourceId": { "type": "string" },
    "status": { "type": "string", "enum": ["available", "occupied", "cleaning", "maintenance"] },
    "currentAppointmentId": { "type": ["string", "null"] },
    "expectedFreeAt": { "type": ["string", "null"], "format": "date-time" },
    "timestamp": { "type": "string", "format": "date-time" },
    "locationId": { "type": "string" }
  },
  "additionalProperties": false
}
